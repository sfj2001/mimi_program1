/**app.wxss**/
.container {
  display: flex;
  flex-direction: column;
  align-items: center;
  box-sizing: border-box;
} 

button {
  background: initial;
}

button:focus{
  outline: 0;
}

button::after{
  border: none;
}


page {
  background: #f6f6f6;
  display: flex;
  flex-direction: column;
  justify-content: flex-start;
}
.change_page{
  /* background-image: linear-gradient(#e66465, #9198e5); */
  background-color: #07c160;
  border-radius: 5px;/* 圆角 */
  margin: auto;
  padding:10px;
  height: 20px;
  width: 165px;

  text-align: center;
  vertical-align: middle;
  color: #f6f6f6;
  font-size: 17px;
  font-weight: 900;

}
